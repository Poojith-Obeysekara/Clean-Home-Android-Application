<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F6EF"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:text="Welcome to Clean Home"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="34sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView1"
                android:layout_width="413dp"
                android:layout_height="183dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loginanimation" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:ems="10"
                android:hint="Enter your username"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#8B000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:ems="10"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColorHint="#8B000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="TextView"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Forgot Password?   Click here to Retrieve"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="158dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:text="Login"
                android:textColor="@color/white"
                app:backgroundTint="@color/cyan_800" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="TextView"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Don't have an account?  Click Here to Register"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>